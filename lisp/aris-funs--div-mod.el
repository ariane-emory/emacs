;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defun* div-mod ((n : integer) (d : integer)) => (pair-of integer)
  ;; "Perform integer division and return (QUOTIENT . REMAINDER)."
  `(,(/ n d) \,(% n d)))
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(confirm that (div-mod 19 8) returns (2 . 3))
(confirm that (div-mod -19 8) returns (-2 . -3))
(confirm that (div-mod 19 -8) returns (-2 . 3))
